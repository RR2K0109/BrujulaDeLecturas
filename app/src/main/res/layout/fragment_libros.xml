<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/entry_screen_background" android:clipToPadding="false"
    tools:context=".fragments.LibrosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloLibros"
            style="@style/Widget.App.TextView.FragmentQuestionTitle" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuáles son tus tres libros favoritos?" />
        <TextView
            android:id="@+id/textViewIndicacionLibros"
            style="@style/Widget.App.TextView.FragmentIndication" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregue mínimo 2 libros" /> <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldLibro1"
        style="@style/Widget.App.TextInputLayout.Entry" android:theme="@style/ThemeOverlay.App.TextInputCursor" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Libro Favorito 1"
        android:layout_marginBottom="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextLibro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_input_color_usuario"/> </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLibro2"
            style="@style/Widget.App.TextInputLayout.Entry" android:theme="@style/ThemeOverlay.App.TextInputCursor" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Libro Favorito 2"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLibro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_input_color_usuario"/> </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLibro3"
            style="@style/Widget.App.TextInputLayout.Entry" android:theme="@style/ThemeOverlay.App.TextInputCursor" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Libro Favorito 3 (Opcional)"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLibro3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_input_color_usuario"/> </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>